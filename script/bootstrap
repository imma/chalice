#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  block compile virtualenv
  mkdir -p "$shome/bin"
  ln -nfs ../vendor/virtualenv/bin/chalice "$shome/bin/"
  ln -nfs ../vendor/virtualenv/bin/http "$shome/bin/"
}

main "$@"
